        <c:ProcessStatus2BrushConverter x:Key="ProcessStatus2BrushConverter" />
    </UserControl.Resources>
    <Grid
        ColumnDefinitions="180,0,*,8,260"
        RowDefinitions="Auto,*">
        <Grid
            Grid.RowSpan="99"
            Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
            RowDefinitions="Auto,8,*,8,Auto">
            <TextBlock
                Padding="0,8"
                HorizontalAlignment="Stretch"
                Background="Transparent"
                FontSize="20"
                FontWeight="Bold"
                Text="FrpGUI"
                TextAlignment="Center">
                <Interaction.Behaviors>
                    <b:WindowDragBehavior />
                </Interaction.Behaviors>
            </TextBlock>
            <ListBox
                Grid.Row="2"
                ItemsSource="{Binding FrpProcesses}"
                SelectedItem="{Binding CurrentFrpProcess}">
                <ListBox.Styles>
                    <Style Selector="ListBoxItem">
                        <Setter Property="ContextMenu">
                            <Setter.Value>
                                <ContextMenu>
                                    <MenuItem
                                        Command="{Binding $parent[UserControl].((vm:MainViewModel)DataContext).DeleteConfigCommand}"
                                        CommandParameter="{Binding .}"
                                        Header="删除" />
                                    <MenuItem
                                        Command="{Binding $parent[UserControl].((vm:MainViewModel)DataContext).CreateCopyCommand}"
                                        CommandParameter="{Binding .}"
                                        Header="建立副本" />
                                </ContextMenu>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.Styles>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel
                            Orientation="Horizontal"
                            Spacing="12">
                            <Ellipse
                                Width="10"
                                Height="10"
                                VerticalAlignment="Center"
                                Fill="{Binding ProcessStatus, Converter={StaticResource ProcessStatus2BrushConverter}}" />
                            <TextBlock Text="{Binding Config.Name}" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Grid
                Grid.Row="4"
                Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                ColumnDefinitions="*,8,*">

                <Button
                    Margin="0,8,0,0"
                    Padding="8"
                    HorizontalAlignment="Stretch"
                    Background="Transparent">
                    <PathIcon Data="{StaticResource IconAdd}" />
                    <Button.Flyout>
                        <MenuFlyout>
                            <MenuItem
                                Command="{Binding AddServerCommand}"
                                Header="服务端" />
                            <MenuItem
                                Command="{Binding AddClientCommand}"
                                Header="客户端" />
                        </MenuFlyout>
                    </Button.Flyout>
                </Button>

                <Button
                    Grid.Column="2"
                    Margin="0,8,0,0"
                    Padding="8"
                    HorizontalAlignment="Stretch"
                    Background="Transparent"
                    Command="{Binding SettingsCommand}">
                    <PathIcon Data="{StaticResource IconSettings}" />
                </Button>
            </Grid>
        </Grid>

        <Panel
            Grid.Row="1"
            Grid.Column="2"
            Margin="8"
            IsVisible="{Binding IsClientPanelVisible}">
            <v:ClientPanel DataContext="{Binding CurrentPanelViewModel}" />
        </Panel>

        <Panel
            Grid.Row="1"
            Grid.Column="2"
            Margin="8"
            IsVisible="{Binding IsServerPanelVisible}">
            <v:ServerPanel DataContext="{Binding CurrentPanelViewModel}" />
        </Panel>

        <v:LogPanel
            Grid.Row="1"
            Grid.Column="4" />

        <v:ControlBar
            Grid.Column="2"
            Grid.ColumnSpan="99">
            <Interaction.Behaviors>
                <b:WindowDragBehavior />
            </Interaction.Behaviors>
        </v:ControlBar>

        <controls:ProgressRingBoxOverlay
            x:Name="ring"
            Grid.RowSpan="99"
            Grid.ColumnSpan="99"
            CanCancel="True"
            Delay="0:0:0.2"
            IsActive="False" />
    </Grid>
</UserControl>