    <Design.DataContext>
        <vm:MainViewModel />
    </Design.DataContext>

    <Grid ColumnDefinitions="200,8,*,8,200">

        <ListBox
            ItemsSource="{Binding FrpConfigs}"
            SelectedItem="{Binding CurrentFrpConfig}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel
                        Orientation="Horizontal"
                        Spacing="12">
                        <Ellipse
                            Width="10"
                            Height="10"
                            VerticalAlignment="Center"
                            Fill="{Binding ProcessStatus, Converter={StaticResource ProcessStatus2BrushConverter}}" />
                        <TextBlock Text="{Binding Name}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Grid
            Grid.Column="2"
            RowDefinitions="Auto,*">
            <StackPanel
                IsVisible="{Binding CurrentFrpConfig, Converter={StaticResource NotNullConverter}}"
                Orientation="Horizontal">
                <StackPanel.Styles>
                    <Style Selector="Button">
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="Width" Value="64" />
                    </Style>
                    <Style Selector="Button[IsEnabled=false]  ContentPresenter#PART_ContentPresenter">
                        <Setter Property="Background" Value="Transparent" />
                    </Style>
                    <Style Selector="PathIcon">
                        <Setter Property="Width" Value="10" />
                        <Setter Property="Height" Value="10" />
                    </Style>
                </StackPanel.Styles>
                <Button>
                    <Button.IsEnabled>
                        <Binding
                            Converter="{StaticResource EqualConverter}"
                            Path="CurrentFrpConfig.ProcessStatus">
                            <Binding.ConverterParameter>
                                <f:ProcessStatus>NotRun</f:ProcessStatus>
                            </Binding.ConverterParameter>
                        </Binding>
                    </Button.IsEnabled>
                    <StackPanel
                        Orientation="Horizontal"
                        Spacing="4">
                        <PathIcon Data="{StaticResource IconStart}" />
                        <TextBlock VerticalAlignment="Center">启动</TextBlock>
                    </StackPanel>
                </Button>

                <Button>
                    <Button.IsEnabled>
                        <Binding
                            Converter="{StaticResource EqualConverter}"
                            Path="CurrentFrpConfig.ProcessStatus">
                            <Binding.ConverterParameter>
                                <f:ProcessStatus>Running</f:ProcessStatus>
                            </Binding.ConverterParameter>
                        </Binding>
                    </Button.IsEnabled>
                    <StackPanel
                        Orientation="Horizontal"
                        Spacing="4">
                        <PathIcon Data="{StaticResource IconStop}" />
                        <TextBlock VerticalAlignment="Center">停止</TextBlock>
                    </StackPanel>
                </Button>

                <Button>
                    <Button.IsEnabled>
                        <Binding
                            Converter="{StaticResource EqualConverter}"
                            Path="CurrentFrpConfig.ProcessStatus">
                            <Binding.ConverterParameter>
                                <f:ProcessStatus>Running</f:ProcessStatus>
                            </Binding.ConverterParameter>
                        </Binding>
                    </Button.IsEnabled>
                    <StackPanel
                        Orientation="Horizontal"
                        Spacing="4">
                        <PathIcon Data="{StaticResource IconRestart}" />
                        <TextBlock VerticalAlignment="Center">重启</TextBlock>
                    </StackPanel>
                </Button>

                <Button>
                    <StackPanel
                        Orientation="Horizontal"
                        Spacing="4">
                        <PathIcon Data="{StaticResource IconExport}" />
                        <TextBlock VerticalAlignment="Center">导出</TextBlock>
                    </StackPanel>
                </Button>


                <Button
                    Width="88"
                    Click="AddRuleButton_Click"
                    IsVisible="{Binding CurrentFrpConfig, Converter={StaticResource EqualConverter}, ConverterParameter={x:Type cf:ClientConfig}}">
                    <StackPanel
                        Orientation="Horizontal"
                        Spacing="4">
                        <PathIcon Data="{StaticResource IconRestart}" />
                        <TextBlock VerticalAlignment="Center">增加规则</TextBlock>
                    </StackPanel>
                </Button>


            </StackPanel>
            <ContentControl
                x:Name="mainPanel"
                Grid.Row="1"
                Content="{Binding CurrentPanel}" />
        </Grid>
        <ListBox Grid.Column="4">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Width="220">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="8" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="复制" />
                            </ContextMenu>
                        </Grid.ContextMenu>
                        <StackPanel
                            VerticalAlignment="Center"
                            Opacity="0.75"
                            Orientation="Horizontal"
                            Spacing="4">
                            <TextBlock
                                Text="{Binding ChangeableTime, StringFormat={}{0:yyyy-MM-dd HH:mm:ss}}"
                                TextWrapping="NoWrap" />
                            <TextBlock
                                IsVisible="{Binding HasUpdated}"
                                Text="{Binding UpdateTimes, StringFormat='×{0}'}"
                                TextWrapping="NoWrap" />
                        </StackPanel>
                        <TextBlock
                            Grid.Row="1"
                            Margin="0,0,4,0"
                            VerticalAlignment="Center"
                            IsVisible="{Binding InstanceName, Converter={StaticResource NotNullConverter}}"
                            Opacity="0.75"
                            Text="{Binding InstanceName}"
                            TextWrapping="NoWrap" />
                        <Border
                            Grid.RowSpan="2"
                            Grid.Column="2"
                            Padding="4"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Background="Gray"
                            BorderThickness="0"
                            CornerRadius="4"
                            IsVisible="{Binding FromFrp}">
                            <TextBlock Text="frp" />
                        </Border>
                        <TextBlock
                            Grid.Row="2"
                            Grid.ColumnSpan="9"
                            Margin="0,0,4,0"
                            Foreground="{Binding TypeBrush}"
                            Text="{Binding Message}"
                            TextWrapping="Wrap" />
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
