    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="{OnPlatform Default=0, Windows=160}" />
        </Grid.ColumnDefinitions>
        <Grid.Styles>
            <Style Selector="Button">
                <Setter Property="Background" Value="Transparent" />
                <!--<Setter Property="Width" Value="64" />-->
                <Setter Property="Height" Value="32" />
                <Style Selector="^:disabled /template/ ContentPresenter#PART_ContentPresenter">
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="Opacity" Value="0.8" />
                </Style>
            </Style>

            <Style Selector="PathIcon">
                <Setter Property="Width" Value="10" />
                <Setter Property="Height" Value="10" />
            </Style>
        </Grid.Styles>
        <Panel
            Grid.Column="1"
            Background="Transparent">
            <Interaction.Behaviors>
                <b:WindowDragBehavior />
            </Interaction.Behaviors>
        </Panel>
        <StackPanel
            IsVisible="{Binding CurrentFrpProcess, Converter={x:Static cvt:Converters.IsNotNull}}"
            Orientation="Horizontal">

            <Button Command="{Binding StartCommand}">
                <Button.IsEnabled>
                    <Binding
                        Converter="{x:Static cvt:Converters.EqualWithParameter}"
                        Path="CurrentFrpProcess.ProcessStatus">
                        <Binding.ConverterParameter>
                            <e:ProcessStatus>Stopped</e:ProcessStatus>
                        </Binding.ConverterParameter>
                    </Binding>
                </Button.IsEnabled>
                <StackPanel
                    Orientation="Horizontal"
                    Spacing="4">
                    <PathIcon Data="{StaticResource IconStart}" />
                    <TextBlock VerticalAlignment="Center">启动</TextBlock>
                </StackPanel>
            </Button>

            <Button Command="{Binding StopCommand}">
                <Button.IsEnabled>
                    <Binding
                        Converter="{x:Static cvt:Converters.EqualWithParameter}"
                        Path="CurrentFrpProcess.ProcessStatus">
                        <Binding.ConverterParameter>
                            <e:ProcessStatus>Running</e:ProcessStatus>
                        </Binding.ConverterParameter>
                    </Binding>
                </Button.IsEnabled>
                <StackPanel
                    Orientation="Horizontal"
                    Spacing="4">
                    <PathIcon Data="{StaticResource IconStop}" />
                    <TextBlock VerticalAlignment="Center">停止</TextBlock>
                </StackPanel>
            </Button>

            <Button Command="{Binding RestartCommand}">
                <Button.IsEnabled>
                    <Binding
                        Converter="{x:Static cvt:Converters.EqualWithParameter}"
                        Path="CurrentFrpProcess.ProcessStatus">
                        <Binding.ConverterParameter>
                            <e:ProcessStatus>Running</e:ProcessStatus>
                        </Binding.ConverterParameter>
                    </Binding>
                </Button.IsEnabled>
                <StackPanel
                    Orientation="Horizontal"
                    Spacing="4">
                    <PathIcon Data="{StaticResource IconRestart}" />
                    <TextBlock VerticalAlignment="Center">重启</TextBlock>
                </StackPanel>
            </Button>

            <Button Command="{Binding ExportCommand}">
                <StackPanel
                    Orientation="Horizontal"
                    Spacing="4">
                    <PathIcon Data="{StaticResource IconExport}" />
                    <TextBlock VerticalAlignment="Center">导出</TextBlock>
                </StackPanel>
            </Button>


            <!--  <Button  -->
            <!--  Command="{Binding AddRuleCommand}"  -->
            <!--  IsVisible="{Binding CurrentFrpProcess.Config, Converter={x:Static cvt:Converters.EqualWithParameter}, ConverterParameter={x:Type m:ClientConfig}}">  -->
            <!--  <StackPanel  -->
            <!--  Orientation="Horizontal"  -->
            <!--  Spacing="4">  -->
            <!--         <PathIcon Data="{StaticResource IconAdd}" /> -->
            <!--         <TextBlock VerticalAlignment="Center">增加规则</TextBlock> -->
            <!--     </StackPanel> -->
            <!-- </Button> -->

            <Button Command="{Binding BrowseAdminCommand}">
                <Button.IsEnabled>
                    <MultiBinding Converter="{x:Static cvt:Converters.AndLogic}">
                        <Binding
                            Converter="{x:Static cvt:Converters.EqualWithParameter}"
                            Path="CurrentFrpProcess.ProcessStatus">
                            <Binding.ConverterParameter>
                                <e:ProcessStatus>Running</e:ProcessStatus>
                            </Binding.ConverterParameter>
                        </Binding>
                        <Binding Path="CurrentFrpProcess.Config.EnableDashBoard" />
                    </MultiBinding>
                </Button.IsEnabled>
                <StackPanel
                    Orientation="Horizontal"
                    Spacing="4">
                    <PathIcon Data="{StaticResource IconBrowse}" />
                    <TextBlock VerticalAlignment="Center">控制台</TextBlock>
                </StackPanel>
            </Button>


        </StackPanel>

        <Button
            Grid.Column="2"
            Width="32"
            HorizontalContentAlignment="Center"
            Command="{Binding SettingsCommand}"
            Opacity="0">
            <PathIcon
                Width="16"
                Height="16"
                Data="{StaticResource IconSettings}" />
        </Button>
        <!--<Button
            Grid.Column="2"
            Width="32"
            HorizontalContentAlignment="Center"
            Command="{Binding SettingsCommand}">
            <PathIcon
                Width="16"
                Height="16"
                Data="{StaticResource IconSettings}" />
        </Button>-->
    </Grid>
</UserControl>