<UserControl
    x:Class="FrpGUI.AddRulePanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FrpGUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:me="clr-namespace:FzLib.WPF.MarkupExtensions;assembly=FzCoreLib.Windows"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <DockPanel LastChildFill="True">
        <ui:SimpleStackPanel
            HorizontalAlignment="Right"
            DockPanel.Dock="Bottom"
            Orientation="Horizontal"
            Spacing="8">
            <Button Content="保存" Click="SaveButton_Click" />
            <Button Content="取消" Click="CancelButton_Click"/>

        </ui:SimpleStackPanel>
        <WrapPanel Margin="8">
            <WrapPanel.Resources>
                <Style
                    BasedOn="{StaticResource DefaultTextBoxStyle}"
                    TargetType="{x:Type TextBox}">
                    <Setter Property="Margin" Value="8,8" />
                    <Setter Property="Width" Value="180" />
                </Style>
            </WrapPanel.Resources>
            <TextBox
                ui:ControlHelper.Header="名称"
                Text="{Binding Rule.Name}" />
            
        </WrapPanel>
    </DockPanel>
</UserControl>